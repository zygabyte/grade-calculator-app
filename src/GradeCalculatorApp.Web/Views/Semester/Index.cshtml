@model object

@{
    ViewBag.Title = "Semesters";
    Layout = "_Layout";
}

<section class="wrapper">
      <!-- page start-->
      <section class="card">
          <header class="card-header">
              All Semesters
              <span class="pull-right">
                  <a href="#newSemesterModal" data-toggle="modal" onclick="showCreateSemesterButton()" class="btn btn-success btn-sm">New Semester</a>
              </span>
          </header>
          <div class="card-body">
              <div class="row">
                  <div class="col-md-12">
                      <div class="adv-table">
                        <table class="table table-hover p-table" id="semesterTable">
                          <thead>
                          <tr>
                              <th>#</th>
                              <th>Semester Name</th>
                              <th>Semester Code</th>
                              <th>Action</th>
                          </tr>
                          </thead>
                          <tbody></tbody>
                      </table>
                    </div>
                  </div>
              </div>
          </div>
      </section>
</section>


<div class="modal fade" id="newSemesterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form class="form-horizontal" data-parsley-validate="true">
                <div class="modal-header">
                    <h5 class="modal-title" id="createSemesterTitle">New Semester</h5>
                    <h5 class="modal-title" id="editSemesterTitle">Edit Semester</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="id" required>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <label for="name">Name</label>
                                <input type="text" required class="form-control" id="name" placeholder="Semester name">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label for="code">Code</label>
                                <input type="text" required class="form-control" id="code" placeholder="Semester code">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary" id="createSemesterBtn" onclick="createSemester()">Create</button>
                    <button type="button" class="btn btn-sm btn-primary" id="editSemesterBtn" onclick="editSemester()">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <script src="Scripts/Semester/Index.js"></script>
}


