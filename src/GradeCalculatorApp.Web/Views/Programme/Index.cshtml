@model object

@{
    ViewBag.Title = "Programmes";
    Layout = "_Layout";
}

<section class="wrapper">
      <!-- page start-->
      <section class="card">
          <header class="card-header">
              All Programmes
              <span class="pull-right">
                  <a href="#newProgrammeModal" data-toggle="modal" onclick="showCreateProgrammeButton()" class="btn btn-success btn-sm">New Programme</a>
              </span>
          </header>
      <div class="card-body">
          <div class="row">
              <div class="col-md-12">
                  <div class="adv-table">
                    <table class="table table-hover p-table" id="programmeTable">
                          <thead>
                          <tr>
                              <th>#</th>
                              <th>Department</th>
                              <th>Programme Name</th>
                              <th>Programme Code</th>
                              <th>Action</th>
                          </tr>
                          </thead>
                          <tbody></tbody>
                    </table>
                </div>
            </div>
          </div>
      </div>
      </section>
</section>


<div class="modal fade" id="newProgrammeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form class="form-horizontal" data-parsley-validate="true">
                <div class="modal-header">
                    <h5 class="modal-title" id="createProgrammeTitle">New Programme</h5>
                    <h5 class="modal-title" id="editProgrammeTitle">Edit Programme</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="id" required>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <label for="name">Name</label>
                                <input type="text" required class="form-control" id="name" placeholder="Programme name">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label for="code">Code</label>
                                <input type="text" required class="form-control" id="code" placeholder="Programme code">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="department">Department</label>
                                <select id="department" class="form-control mb-2">
                                    <option selected>Select department</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary" id="createProgrammeBtn" onclick="createProgramme()">Create</button>
                    <button type="button" class="btn btn-sm btn-primary" id="editProgrammeBtn" onclick="editProgramme()">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteProgrammeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModal">Delete Programme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you really want to delete this Programme?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteProgramme()">Yes</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="Scripts/Programme/Index.js"></script>
}
