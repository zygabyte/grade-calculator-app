@model object

@{
    ViewBag.Title = "Departments";
    Layout = "_Layout";
}

<section class="wrapper">
      <!-- page start-->
      <section class="card">
          <header class="card-header">
              All Departments
              <span class="pull-right">
                  <a href="#newDepartmentModal" data-toggle="modal" onclick="showCreateDepartmentButton()" class="btn btn-success btn-sm">New Department</a>
              </span>
          </header>
      <div class="card-body">
          <div class="row">
              <div class="col-md-12">
                  <div class="adv-table">
                    <table class="table table-hover p-table" id="departmentTable">
                          <thead>
                          <tr>
                              <th>#</th>
                              <th>School</th>
                              <th>Department Name</th>
                              <th>Department Code</th>
                              <th>Action</th>
                          </tr>
                          </thead>
                          <tbody></tbody>
                    </table>
                </div>
            </div>
          </div>
      </div>
      </section>
</section>


<div class="modal fade" id="newDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form class="form-horizontal" data-parsley-validate="true">
                <div class="modal-header">
                    <h5 class="modal-title" id="createDepartmentTitle">New Department</h5>
                    <h5 class="modal-title" id="editDepartmentTitle">Edit Department</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="id" required>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <label for="name">Name</label>
                                <input type="text" required class="form-control" id="name" placeholder="Department name">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label for="code">Code</label>
                                <input type="text" required class="form-control" id="code" placeholder="Department code">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="school">School</label>
                                <select id="school" class="form-control mb-2">
                                    <option selected>Select school</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary" id="createDepartmentBtn" onclick="createDepartment()">Create</button>
                    <button type="button" class="btn btn-sm btn-primary" id="editDepartmentBtn" onclick="editDepartment()">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModal">Delete Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you really want to delete this Department?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteDepartment()">Yes</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="Scripts/Department/Index.js"></script>
}
