@model object

@{
    ViewBag.Title = "Lecturers";
    Layout = "_Layout";
}

@section styles
{
    <link rel="stylesheet" href="css/jquery.fileupload.css"/>
    <link rel="stylesheet" href="css/jquery.fileupload-ui.css"/>
    
    <noscript>
        <link rel="stylesheet" href="css/jquery.fileupload-noscript.css">
    </noscript>
    <noscript>
        <link rel="stylesheet" href="css/jquery.fileupload-ui-noscript.css">
    </noscript>
}

<section class="wrapper">
      <!-- page start-->
      <section class="card">
          <header class="card-header">
              All Lecturers
              <br/><br/>
              
              <a href="javascript;" id="downloadLecturerTemplate" class="btn btn-primary btn-sm">Download Template</a>
              <span class="btn btn-primary btn-sm  fileinput-button">
                  <span>Upload Lecturers</span>
                  <input id="lecturersUpload" type="file" name="lecturersUpload">
              </span>
              
              <span class="pull-right">
                  <a href="#newLecturerModal" data-toggle="modal" onclick="showCreateLecturerButton()" class="btn btn-success btn-sm">New Lecturer</a>
              </span>
          </header>
      <div class="card-body">
          <div class="row">
              <div class="col-md-12">
                  <div class="adv-table">
                    <table class="table table-hover p-table" id="lecturerTable">
                          <thead>
                          <tr>
                              <th>#</th>
                              <th>Firstname</th>
                              <th>Lastname</th>
                              <th>Email</th>
                              <th>Department</th>
                              <th>Action</th>
                          </tr>
                          </thead>
                          <tbody></tbody>
                    </table>
                </div>
            </div>
          </div>
      </div>
      </section>
</section>


<div class="modal fade" id="newLecturerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form class="form-horizontal" data-parsley-validate="true">
                <div class="modal-header">
                    <h5 class="modal-title" id="createLecturerTitle">New Lecturer</h5>
                    <h5 class="modal-title" id="editLecturerTitle">Edit Lecturer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="id" required>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <label for="firstname">First Name</label>
                                <input type="text" required class="form-control" id="firstname" placeholder="First name">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label for="lastname">Last Name</label>
                                <input type="text" required class="form-control" id="lastname" placeholder="Last name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <label for="email">Email</label>
                                <input type="email" required class="form-control" id="email" placeholder="Email">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label for="department">Department</label>
                                <select id="department" class="form-control mb-2">
                                    <option selected>Select department</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary" id="createLecturerBtn" onclick="createLecturer()">Create</button>
                    <button type="button" class="btn btn-sm btn-primary" id="editLecturerBtn" onclick="editLecturer()">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteLecturerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModal">Delete Lecturer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you really want to delete this Lecturer?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteLecturer()">Yes</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="js/jquery.fileupload.js"></script>
    <script src="js/main.js"></script>
    <script src="Scripts/Lecturer/Index.js"></script>
}
